{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
	],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
	"jsx": "preserve",
	"outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
	  "@/*":["*"],
	  "@context/*": ["context/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@service/*": ["service/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "*": ["node_modules/*"]
    },
  },
  "include": [
	"**/.ttf",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
